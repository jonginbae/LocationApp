<p id="notice"><%= notice %></p>
<div class="activity_show_content">
  <div class="thumbnail">
    <div id="map"></div>
    <div class="caption">
        <h3><%= @activity.activity_name %></h3>
        <p>Teacher : <%= Teacher.find_by_id(@activity.teacher_id).first_name+" "+Teacher.find_by_id(@activity.teacher_id).last_name %></p>
        <p>Activity name: <%= @activity.activity_name %></p>
        <p>Place : <%= @activity.place %></p>
        <p> Date : <%= @activity.date_from %></p>
    </div>
  </div>
</div>
<div class="activity_show_content_student_list">
  <div class="list-group">
    <ul class="list-group">
      <% @students.each do |student| %>
        <li class="list-group-item list-group-item-success"><%= student.first_name %><span class="badge">0</span></li>
      <% end %>
    </ul>
  </div>
</div>

