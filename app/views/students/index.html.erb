<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">Student List</div>
  <!-- <div class="panel-body">
  </div> -->

  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Parent1 first name</th>
        <th>Parent1 last name</th>
        <th>Parent1 phone number</th>
        <th>Parent2 first name</th>
        <th>Parent2 last name</th>
        <th>Parent2 phone name</th>
        <th>Parent1 email</th>
        <th>Parent2 email</th>
      </tr>
    </thead>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.position %></td>
        <td><%= student.parent1_first_name %></td>
        <td><%= student.parent1_last_name %></td>
        <td><%= student.parent1_phone_number %></td>
        <td><%= student.parent2_first_name %></td>
        <td><%= student.parent2_last_name %></td>
        <td><%= student.parent2_phone_name %></td>
        <td><%= student.parent1_email %></td>
        <td><%= student.parent2_email %></td>
      </tr>
    <% end %>
  </table>
</div>
